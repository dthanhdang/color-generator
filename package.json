{
  "name": "ucolorr",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite --config vite.config.server.ts\" \"vite --config vite.config.client.ts\"",
    "lint": "eslint .",
    "lint:check": "eslint .",
    "prettier:check": "prettier --check .",
    "preview": "vite preview",
    "qa": "pnpm tsc:check && pnpm lint:check && pnpm prettier:check && pnpm unit_tests",
    "tsc:check": "tsc -noEmit --project tsconfig.app.json",
    "tsr:generate_routes": "tsr generate",
    "unit_tests": "pnpm vitest:client:run && pnpm vitest:server:run",
    "vite:build": "pnpm vite build --config vite.config.client.ts && pnpm vite build --config vite.config.server.ts",
    "vitest:client:run": "vitest run --config=vite.config.client.ts --mode development",
    "vitest:client:watch": "vitest watch --config=vite.config.client.ts --mode development",
    "vite:dev": "concurrently \"vite --config vite.config.server.ts\" \"vite --config vite.config.client.ts\"",
    "vite:preview": "vite preview",
    "vitest:server:run": "vitest run --config=vitest.config.server.ts --mode development",
    "vitest:server:watch": "vitest watch --config=vitest.config.server.ts --mode development",
    "wrangler:generate_types": "pnpm wrangler types && mkdir -p ./src/server/_generated && mv worker-configuration.d.ts ./src/server/_generated",
    "wrangler:preview": "pnpm wrangler pages dev"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@mantine/charts": "^7.17.3",
    "@mantine/core": "^7.17.0",
    "@mantine/dates": "^7.17.0",
    "@mantine/form": "^7.17.0",
    "@mantine/hooks": "^7.17.0",
    "@mantine/modals": "^7.17.0",
    "@mantine/notifications": "^7.17.0",
    "@meow-meow-dev/server-utilities": "3.14.0",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-router": "^1.114.27",
    "@uidotdev/usehooks": "^2.4.1",
    "chroma-js": "^3.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "colorthief": "^2.6.0",
    "dayjs": "^1.11.13",
    "hono": "^4.7.5",
    "lucide-react": "^0.477.0",
    "mantine-form-valibot-resolver": "^3.0.1",
    "nanoid": "^5.1.0",
    "neverthrow": "^8.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.3.8",
    "recharts": "2",
    "resend": "^4.4.0",
    "tailwind-merge": "^3.0.2",
    "tailwind-preset-mantine": "^2.0.1",
    "tailwindcss": "^4.0.6",
    "tailwindcss-animate": "^1.0.7",
    "valibot": "^1.0.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.8",
    "@eslint/js": "^9.19.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-dev-server": "^0.19.0",
    "@meow-meow-dev/generator": "^1.5.1",
    "@meow-meow-dev/vite-plugin-generate-dotenv": "^1.1.1",
    "@tanstack/router-cli": "^1.114.34",
    "@tanstack/router-plugin": "^1.114.27",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/chroma-js": "^3.1.1",
    "@types/node": "^22.14.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.3",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.5.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vitest": "^3.0.7",
    "wrangler": "^4.12.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "workerd"
    ]
  },
  "exports": {
    "./pages/landing": "./src/pages/landing/index.ts"
  },
  "imports": {
    "#pages/*": "./src/client/pages/*/index.ts",
    "#utils/*": "./src/client/utils/*",
    "#components/*": "./src/client/components/*",
    "#client/*": "./src/client/*/index.ts",
    "#server/hono": "./src/server/hono/index.ts",
    "#server/routes": "./src/server/routes/index.ts"
  }
}
